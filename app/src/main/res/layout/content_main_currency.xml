<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="27dp"
        android:background="#FFFFFF"
        android:onClick="onClickBack"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/button"
            tools:srcCompat="@drawable/button" />

        <TextView
            android:id="@+id/textViewMainWindow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center|left"
            android:text="Главный экран"
            android:textColor="#070707"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/main_top_of_list_view"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewOfDate"
            android:layout_width="148dp"
            android:layout_height="match_parent"
            android:background="@drawable/main_top_of_list_view"
            android:gravity="bottom|center"
            android:text="13.11.2020"
            android:textColor="#505050" />

        <TextView
            android:id="@+id/textViewOfBought"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Покупка"
            android:textColor="#505050"
            android:textSize="14sp" />


    </LinearLayout>

    <ListView
        android:id="@+id/listCurrency"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cardview_shadow_start_color"
        android:cacheColorHint="@color/backgroundOfLogin"/>

</LinearLayout>
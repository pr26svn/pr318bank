<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_379050160_2022xiphone"
    android:clipToPadding="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="339dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button1"
            android:drawableLeft="@drawable/icons8_map_pin_100"
            android:text="@string/OtdeliBank"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:icon="@drawable/icons8_map_pin_100"
            app:iconGravity="start"
            app:iconPadding="10dp"
            app:iconSize="50dp"
            app:iconTint="@color/purple_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.317" />

        <Button
            android:id="@+id/button2"
            android:layout_width="339dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_button2"
            android:text="@string/kursy"
            android:textColor="@color/black"
            app:backgroundTint="@color/white"
            app:icon="@drawable/financial_assistance_dollar_sign_1000x1000_g_pl_png_img"
            app:iconGravity="start"
            app:iconSize="50dp"
            app:iconTint="@color/purple_500"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button3"
            android:layout_width="383dp"
            android:layout_height="101dp"
            android:background="@drawable/rounded_button3"
            android:text="@string/open"
            android:textColor="@color/white"
            app:backgroundTint="#3700B3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintVertical_bias="0.206" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="158dp"
            android:layout_height="98dp"
            app:srcCompat="@drawable/icons8_museum_100"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="73dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="191dp"
            android:layout_height="104dp"
            app:srcCompat="@drawable/worldskills_bank"
            tools:layout_editor_absoluteX="204dp"
            tools:layout_editor_absoluteY="80dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_379050160_2022xiphone"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="80dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/icons8_museum_100" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/worldskills_bank" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"

        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:isScrollContainer="false"
        android:text="Отделения и банкоматы"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/icons8_map_pin_100"
        app:iconGravity="start"
        app:iconSize="35dp"
        app:iconTint="@color/purple_200" />


    <Button
        android:id="@+id/button2"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="@color/white"
        android:text="Курсы валют"
        android:textColor="@color/black"

        android:textSize="15sp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/purple_700"
        android:text="Войти"
        android:textColor="@color/white"
        app:cornerRadius="10dp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backmain"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:paddingTop="30dp">
    <!--Верх-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp">
        <!--Иконка-->
        <ImageView
            android:id="@+id/BankImage"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/mpin" />
        <!--Название--><!--Надо больше-->
        <ImageView
            android:id="@+id/BankText"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            app:srcCompat="@drawable/wsbhead" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        android:orientation="horizontal"
        android:padding="30dp"
        android:onClick="oclick">
        <!--Иконка с лупой-->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="44dp"
            android:layout_height="41dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/onepin" />
        <!--Иконка Банкоматы-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:text="Отделения и банкоматы"
            android:textColor="@color/Black" />
    </LinearLayout>
    <!--Курсы валют-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="20dp"
        android:onClick="MClick">
        <!--Иконка и описание-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <!--Доллар-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/twopin" />

            <!--Текст: Курсы валют-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Курсы валют"
                android:textSize="20dp"
                android:textColor="@color/Black"/>

            <!--Актуальное время-->
            <TextView
                android:id="@+id/MainDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textSize="15dp"
                android:layout_gravity="right"/>

        </LinearLayout>
        <!--Курсы валют-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="USD"
                android:textColor="@color/Black"/>
            <TextView
                android:id="@+id/USD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="EUR"
                android:textColor="@color/Black"/>
            <TextView
                android:id="@+id/EUR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left" />
        </LinearLayout>
    </LinearLayout>
<!--Кнопка-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:layout_gravity="top"
            android:orientation="horizontal"
            android:background="@drawable/buttonvoiti"
            android:onClick="LoginMain">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Войти"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="25dp"
                android:layout_margin="20dp"
                android:textColor="@color/White"/>
        </LinearLayout>

    </LinearLayout>

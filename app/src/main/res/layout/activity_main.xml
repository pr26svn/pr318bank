<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whatsapp_image_2020_11_09_at_12_52_46"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="103dp"
                android:layout_height="54dp"
                android:src="@drawable/icon_2" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WorldSkills Bank"
                android:textColor="#9F5CAA"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="391dp"
                android:layout_height="81dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded"
                android:onClick="ATM"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="376dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="2dp"/>
                        <!--app:srcCompat="@drawable/icon_1"-->

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:elevation="2dp"
                        android:text="Отделения и банкоматы"
                        android:textColor="#000000"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="392dp"
                android:layout_height="81dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded2"
                android:onClick="valute"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="385dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="2dp"
                                android:paddingLeft="10dp"
                                android:paddingTop="5dp"
                                app:srcCompat="@drawable/dollars" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="181dp"
                            android:layout_height="37dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:text="Курсы валют"
                                android:textColor="#000000"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="158dp"
                            android:layout_height="37dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:text="TextView"

                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="193dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="84dp"
                                android:layout_height="match_parent"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:text="USD"
                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="108dp"
                                android:layout_height="46dp"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:text="TextView"
                                android:textColor="#000000" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="92dp"
                                android:layout_height="match_parent"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:text="EUR"

                                android:textColor="#000000"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:elevation="2dp"
                                android:gravity="center"
                                android:text="TextView"
                                android:textColor="#000000" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    android:layout_width="393dp"
                    android:layout_height="93dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="12dp"

                    android:background="@drawable/rounded3"
                    android:text="Войти"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
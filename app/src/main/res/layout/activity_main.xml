<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4">
        <ImageView
            android:layout_weight="1"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="30dp"
            android:src="@drawable/bank_logo"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="36dp"
            android:textColor="#cc55cc"
            android:text="WorldSkills Bank"
            android:gravity="bottom"
            android:layout_marginBottom="125dp"
            />
    </TableRow>
    <Button
        android:id="@+id/button_1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border_settings"
        android:textSize="14dp"
        android:textColor="#000000"
        android:text="Отделения и банкоматы"
        android:drawableLeft="@drawable/icon_1"
        />
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/button_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_settings"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="2dp"
            android:src="@drawable/icon_2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:text="Курсы валют"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USD: "
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/text_usd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:text="textView"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EUR: "
            android:textColor="#000000"
            android:elevation="2dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/text_eur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textView"
            android:elevation="2dp"
            android:layout_marginLeft="195dp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="textView"
            android:elevation="2dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <Button
        android:id="@+id/button_3"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="70dp"
        android:background="@drawable/border_settings_two"
        android:text="ВОЙТИ"
        android:textColor="#ffffff"
        android:textSize="18dp" />

</LinearLayout>
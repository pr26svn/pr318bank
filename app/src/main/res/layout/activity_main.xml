<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_379050160_2022xiphone"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="76dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:src="@drawable/icons8_museum_100"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:layout_width="287dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.7"
            android:paddingTop="20dp"
            android:src="@drawable/worldskills_bank" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="70dp">

        <Button
            android:id="@+id/button"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:text="Отделения и банкоматы"
            app:backgroundTint="#FFFFFF"
            android:textColor="#000000"
            app:icon="@drawable/icons8_map_pin_100"
            app:iconGravity="start"
            app:iconSize="@android:dimen/app_icon_size"
            app:iconTint="@color/purple_200" />

        <Button
            android:id="@+id/button2"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:text="Курсы валют"
            android:textColor="@color/black"
            android:textIsSelectable="false"
            app:backgroundTint="@color/white"
            app:icon="@drawable/_489436639_moneyrecycledollarcurrency_81883"
            app:iconGravity="start"
            app:iconSize="60dp"
            app:iconTint="@color/purple_200" />

        <Button
            android:id="@+id/button3"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:baselineAligned="false"
            android:foreground="@drawable/controls___buttons___dark___shape_button__custom_"
            android:text="Войти"
            android:textSize="25dp"
            app:backgroundTint="@color/purple_700" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
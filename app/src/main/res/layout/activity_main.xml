<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_379050160_2022xiphone"
    android:clipToPadding="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="349dp"
        tools:layout_editor_absoluteY="70dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="397dp"
            android:layout_height="219dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="70dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="158dp"
                android:layout_height="98dp"
                app:srcCompat="@drawable/icons8_museum_100"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="73dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="191dp"
                android:layout_height="104dp"
                app:srcCompat="@drawable/worldskills_bank"
                tools:layout_editor_absoluteX="204dp"
                tools:layout_editor_absoluteY="80dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    android:layout_width="387dp"
                    android:layout_height="88dp"
                    android:background="@drawable/rounded_button1"
                    android:clickable="false"
                    android:drawableLeft="@drawable/iconsize"
                    android:duplicateParentState="false"
                    android:gravity="center"
                    android:hapticFeedbackEnabled="false"
                    android:onClick="onClick"
                    android:text="@string/OtdeliBank"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:iconGravity="start"
                    app:iconPadding="10dp"
                    app:iconSize="50dp"
                    app:iconTint="@color/purple_500" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="387dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rounded_button1"
                    android:gravity="center"
                    android:onClick="onClick2"
                    android:orientation="horizontal"
                    android:paddingTop="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="66dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/dollar"
                                    android:layout_width="49dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    app:srcCompat="@drawable/photo_2020_11_09_19_40_34" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="140dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/course"

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"

                                    android:gravity="center"
                                    android:text="Курсы валют"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/black"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/data"

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"

                                    android:gravity="center_horizontal|end"

                                    android:text=""
                                    android:textColor="@android:color/black"

                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="188dp"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/usd"

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"

                                    android:gravity="center"
                                    android:text="USD"
                                    android:textColor="@android:color/black"

                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/course_usd"

                                    android:layout_width="wrap_content"
                                    android:layout_height="28dp"
                                    android:layout_weight="1"

                                    android:gravity="center"

                                    android:text=""
                                    android:textColor="@android:color/black"

                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/uer"

                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"

                                    android:gravity="center"
                                    android:text="UER"
                                    android:textColor="@android:color/black"

                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/course_uer"

                                    android:layout_width="wrap_content"
                                    android:layout_height="28dp"
                                    android:layout_weight="1"

                                    android:gravity="center"

                                    android:text=""
                                    android:textColor="@android:color/black"

                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="387dp"
                    android:layout_height="88dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_button3"
                    android:gravity="center"
                    android:onClick="Dialog"
                    android:paddingTop="20dp"
                    android:text="@string/open"
                    android:textColor="@color/white"
                    app:backgroundTint="#3700B3"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.571"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button2"
                    app:layout_constraintVertical_bias="0.206" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_379050160_2022xiphone"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="80dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="28dp"
        android:orientation="horizontal">
              <!--  Логотип      -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/icons8_museum_100" />
              <!--Название банка-->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="280dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/worldskills_bank" />
    </LinearLayout>
              <!--кнопка отделения и банкоматы-->
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"

        android:layout_height="80dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/white"
        android:isScrollContainer="false"
        android:textAllCaps="false"
        android:text="Отделения и банкоматы"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/icons8_map_pin_100"
        app:iconGravity="start"
        app:iconSize="35dp"
        app:iconTint="@color/purple_200" />
              <!--Кнопка курсы валют-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp"
        android:padding="10dp"
        android:background="@drawable/bg"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">
            <!--Значок доллара-->
            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:srcCompat="@drawable/__1_"/>
            <!--Курсы валют-->
            <TextView
                android:id="@+id/textView1"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="Курсы валют"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                />
            <!--Дата-->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="09.11.2020" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--Курс доллара-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="USD"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="65.2"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <!--Курс евро-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="EUR"
                        android:textColor="@android:color/background_dark"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="90,05"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<!--Кнопка войти-->
    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="#1740B7"
        android:text="Войти"
        android:textColor="@color/white"
        app:cornerRadius="10dp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1379050160_2022xiphone"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="80dp"
    android:paddingRight="10dp"
    tools:context=".MainActivity">
    <!--        ЛОГОТИП        -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/icons8_museum_100" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="214dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/worldskills_bank" />
    </LinearLayout>

    <!--        КНОПКА ОТДЕЛЕНИЯ И БАНКОМАТЫ         -->
    <LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:padding="10dp"
        android:background="@drawable/layout_bg"
        style="@style/ButtonMain"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/icons8_map_pin_100"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bankomats"
                android:textAllCaps="false"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                android:gravity="left"
                android:layout_marginLeft="25dp"/>

        </LinearLayout>
    </LinearLayout>

    <!--        КНОПКА КУРСЫ ВАЛЮТ         -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:padding="10dp"
        android:background="@drawable/layout_bg"
        style="@style/ButtonMain"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:srcCompat="@drawable/dollar1"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:text="Курсы валют"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                 />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="09.11.2020" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="USD"
                        android:textColor="@android:color/background_dark"
                        android:textStyle="bold"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="76,12"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="EUR"
                        android:textColor="@android:color/background_dark"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="89,89"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!--        КНОПКА ВОЙТИ        -->
    <Button
        android:id="@+id/button3"
        style="@style/ButtonMain"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="@color/colorBlue"
        android:text="@string/login"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />
</LinearLayout>

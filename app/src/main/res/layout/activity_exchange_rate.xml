<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".activity_exchange_rate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/forMain"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="#FFFFFF"
            android:onClick="OnMain"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previousImageView"
                android:layout_width="43dp"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:onClick="OnMain"
                app:srcCompat="@drawable/previous" />

            <TextView
                android:id="@+id/onMainText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#EEEEEE"
                android:gravity="center_vertical"
                android:text="@string/on_main"
                android:textColor="#238DE8"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/today"

                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:gravity="bottom"
                android:text=""
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/buyTextView"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="bottom|center"

                android:text="@string/buy"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/sellTextView"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="bottom|center"

                android:text="@string/sell"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
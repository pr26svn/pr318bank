<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/textStreet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/street"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textBrachesOfBancomats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStreet"
        android:text="BrachesBancomats"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStreet"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/textBrachesOfBancomats"
        android:text="status"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/txtTimeFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStreet"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/txtStatus"
        android:text="@string/timeWork"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textTimeOfWork"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textStreet"

        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/txtTimeFirst"
        android:text="TimeOfWork"
        android:textColor="#000000" />
</RelativeLayout>